<%= div_for article do %>
  <h3>
    <p style="font-size: 25px; color: cornflowerblue;">
      <%= article.title %>
    </p>
  </h3>
  <%= simple_format article.body %>

  <% if article.owned_by? current_user %>
      <span class='actions'>
        <%= link_to "Edit", edit_article_path(article), class: 'btn btn-mini btn-info' %>

        <%= link_to 'Delete', article, method: :delete, confirm: 'Are you sure?', class: 'btn btn-mini btn-danger' %>

      </span>
    <% end %>
<% end %>
